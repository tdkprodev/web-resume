{
  "compilerOptions": {
    "baseUrl": "../",
    "paths": {
      "@client/*": ["client/*"],
      "@src/*": ["client/src/*"],
      "@images/*": ["client/src/images/*"],
      "@modules/*": ["client/src/modules/*"],
      "@components/*": ["client/src/components/*"],
      "@server/*": ["server/*"],
      "@shared/*": ["shared/*"],
      "@connection/*": ["shared/connection/*"],
      "@interface/*": ["shared/interface/*"]
    },
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
